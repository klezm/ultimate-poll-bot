    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dev (reset db)",
            "type": "shell",
            // "isBackground": true,
            "group": "build",
            // "command": "rm ~/.config/ultimate_pollbot.toml; poetry run python main.py && poetry run python initdb.py && poetry run python main.py",
            // "command": "rm ~/.config/ultimate_pollbot.toml; poetry run python main.py && poetry run python initdb.py --drop-existing && poetry run python main.py",
            // "command": "poetry run python main.py",
            // "command": "(rm ~/.config/ultimate_pollbot.toml) && poetry run python main.py && poetry run python initdb.py --drop-existing && poetry run python main.py",

            // "command": "poetry run python main.py && poetry run python initdb.py --drop-existing && poetry run python main.py",
            "command": "poetry run python main.py; poetry run python initdb.py --drop-existing && poetry run python main.py",
            "dependsOn": ["reset config"]
        },
        {
            "label": "reset config",
            "type": "shell",
            "command": "rm -f ~/.config/ultimate_pollbot.toml"
            // "command": "rm -f ~/.config/ultimate_pollbot.toml || echo 'no config file to remove'"
        },
        {
            "label": "build dev (keep db)",
            "type": "shell",
            "group": "build",
            "command": "poetry run python main.py"
        },
        {
            "label": "test",
            "type": "shell",
            "group": "test",
            "command": "poetry run pytest"
        }
    ]
}
